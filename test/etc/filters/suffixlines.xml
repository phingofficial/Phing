<?xml version="1.0"?>
<project default="cleanup">

  <target name="init">
    <mkdir dir="result" />
  </target>

  <target name="cleanup">
    <delete dir="result"/>
  </target>

  <target name="testSuffixLines" depends="init">
    <copy todir="result">
      <fileset dir="input"/>
      <filterchain>
        <filterreader classname="phing.filters.SuffixLines">
          <param name="suffix" value="Foo"/>
        </filterreader>
        <!-- To make the test also working on windows, ignore line breaks. -->
        <striplinebreaks />
      </filterchain>
    </copy>
  </target>

</project>
